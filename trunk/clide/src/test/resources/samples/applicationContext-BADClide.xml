 <beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:jee="http://www.springframework.org/schema/jee"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="
			http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
			http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
			http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
			http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
			http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-2.5.xsd
			http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
		">

    <context:annotation-config/>
    <context:component-scan base-package="gov.nih.nci.ncicb.tcga.dcc.clide"/>

    <bean id="propertyConfigurer"
          class="gov.nih.nci.ncicb.tcga.dcc.common.annotations.TCGAValueImpl"
          p:location="classpath:samples/destinationDirDoesntExist.properties"/>

    <import resource="classpath:/org/jboss/netty/container/spring/beans.xml"/>
    
    <bean id="mailSender"
          class="gov.nih.nci.ncicb.tcga.dcc.common.mail.impl.MailSenderImpl"
          p:defaultFromAddress="${tcga.clide.defaultFromAddress}"
          p:defaultReplyTo="${tcga.clide.defaultReplyTo}"
          p:defaultCcAddress="${tcga.clide.defaultCcAddress}"
          p:defaultFromName="${tcga.clide.defaultFromName}"
          p:mailEnabled="${tcga.clide.enableEmail}"
          p:subjectPrefix="${tcga.clide.subjectPrefix}"
          p:javaMailSender-ref="mailSenderImpl"/>

    <bean id="mailErrorHelper"
          class="gov.nih.nci.ncicb.tcga.dcc.common.mail.MailErrorHelperImpl"
          p:to="${tcga.clide.error.to}"
          p:subject="${tcga.clide.error.subject}"
          p:mailSender-ref="mailSender"/>

    <bean id="mailSenderImpl"
          class="org.springframework.mail.javamail.JavaMailSenderImpl"
          p:host="${tcga.clide.mailHost}"/>


</beans>
